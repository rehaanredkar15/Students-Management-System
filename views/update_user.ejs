<!--Main Site-->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-arrow-left"></i> <i class=" fas fa-arrow-left fa-users"></i></a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">
                <a>
                    <span class="text-dark">Update USER </span><br>
                    <span class="text-light">Use the below form to update user account</span>
                </a>
            </h2>
        </div>
        </a>

        <!-- form handling -->
        <form method="POST" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="hidden" name="id" value="<%= users._id %>">
                    <input type="text" name="name" value="<%= users.name %>" autocomplete="off"
                        placeholder="Enter the Student Name here">
                </div>
                <div class="form-group">
                    <label for="Email" class="text-light">Pendin Fees</label>
                    <input type="text" name="fees" value="<%= users.fees %>" autocomplete="off"
                        placeholder="Enter Fees of the student here">
                </div>

                <div class="form-group">
                    <label for="gender" class="text-light">Status</label>
                    <div class="radio inline">
                        <a>
                            <input type="radio" id="radio-4" name="status" value="Active">
                            <label for="radio-4" class="radio-label">Active</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-5" name="status" value="Inactive">
                        <label for="radio-5" class="radio-label">Inactive</label>
                    </div>
                    </a>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
            </div>
        </form>

        <!-- form handling -->
</main>
<!--Main Site-->



